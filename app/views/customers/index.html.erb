                  <%# <i class="fas fa-eye"></i>  %>
                  Get details
                <% end %>
                <!-- Customer edit -->
                <%= link_to edit_customer_path(customer.id),
                class: "dropdown-item" do %>
                  <%# <i class="fas fa-edit"></i>  %>
                  Edit
                <% end %>
                <div class="dropdown-divider"></div>
                <!-- Customer destroy -->
                <%= link_to customer_path(customer.id),
